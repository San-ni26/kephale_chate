/**
 * Environment Variables Template
 * Copy this file to .env and fill in your values
 */

# Database
DATABASE_URL="mysql://user:password@localhost:3306/chat_kephale"

# JWT Secret (generate a strong random string)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production-min-32-chars"

# Email Configuration (Nodemailer)
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT="587"
EMAIL_SECURE="false"
EMAIL_USER="your-email@gmail.com"
EMAIL_PASSWORD="your-app-specific-password"
EMAIL_FROM="Chat Kephale <noreply@chatkephale.com>"

# Application URLs
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Pusher (required for real-time features: notifications, calls, typing)
# Create a free account at https://pusher.com and create a Channels app
PUSHER_APP_ID="your-pusher-app-id"
NEXT_PUBLIC_PUSHER_KEY="your-pusher-key"
PUSHER_SECRET="your-pusher-secret"
NEXT_PUBLIC_PUSHER_CLUSTER="eu"

# VAPID Keys (for Web Push Notifications)
# Generate with: npx web-push generate-vapid-keys
NEXT_PUBLIC_VAPID_PUBLIC_KEY="your-vapid-public-key"
VAPID_PRIVATE_KEY="your-vapid-private-key"
VAPID_SUBJECT="mailto:admin@chatkephale.com"

# Allowed Countries (comma-separated ISO country codes)
# Example: "FR,BE,CH,CA" for France, Belgium, Switzerland, Canada
ALLOWED_COUNTRIES="FR,US,CA,GB,DE,BE,CH,ML"

# Admin Configuration
SUPER_ADMIN_EMAIL="admin@chatkephale.com"

# Redis (Upstash - pour présence en ligne, compatible Vercel)
# Créer une base gratuite sur https://upstash.com
UPSTASH_REDIS_REST_URL="https://xxx.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-redis-token"

# Rate Limiting
RATE_LIMIT_WINDOW_MS="900000"  # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS="100"

# File Upload
MAX_FILE_SIZE_MB="10"

# Session
SESSION_SECRET="your-session-secret-change-this"

# Node Environment
NODE_ENV="development"

# PWA
NEXT_PUBLIC_PWA_ENABLED="true"

# Google Maps API (for geolocation features)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# Monitoring (optional)
SENTRY_DSN=""
SENTRY_ENVIRONMENT="development"

# Logging
LOG_LEVEL="info"  # error, warn, info, debug
